.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 订单状态切换栏样式 */
.status-bar {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.status-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.status-item text {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
}

.status-item.active text {
  color: #1e88e5;
}

.status-item.active::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1e88e5;
  border-radius: 2rpx;
}

/* 订单列表样式 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
}

.order-status.unpaid {
  color: #f85959;
}

.order-status.unconfirmed {
  color: #ff9800;
}

.order-status.completed {
  color: #4caf50;
}

.order-content {
  display: flex;
  padding: 20rpx;
}

.destination-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.order-info {
  flex: 1;
}

.destination-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.travel-date,
.people-count {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.price-row {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.price-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
}

.price {
  font-size: 32rpx;
  color: #f85959;
  font-weight: bold;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx;
  border-top: 1rpx solid #f5f5f5;
  gap: 20rpx;
}

.btn {
  padding: 0 30rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
}

.btn-cancel {
  background: #fff;
  border: 1rpx solid #ddd;
  color: #666;
}

.btn-primary {
  background: #1e88e5;
  color: #fff;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}