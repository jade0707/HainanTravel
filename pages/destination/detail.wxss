.container {
  padding-bottom: 120rpx;
}

/* 轮播图样式 */
.banner {
  height: 450rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 景点信息样式 */
.info-section {
  padding: 30rpx;
  background: #fff;
}

.title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.price {
  font-size: 32rpx;
  color: #f85959;
  font-weight: bold;
}

.rating {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.score {
  font-size: 32rpx;
  color: #f85959;
  font-weight: bold;
}

.stars {
  display: flex;
  gap: 4rpx;
}

.stars image {
  width: 24rpx;
  height: 24rpx;
}

.review-count {
  font-size: 24rpx;
  color: #999;
}

/* 景点介绍样式 */
.section {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.features {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.feature-item image {
  width: 32rpx;
  height: 32rpx;
}

.feature-item text {
  font-size: 24rpx;
  color: #666;
}

/* 用户评价样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.more {
  font-size: 24rpx;
  color: #1e88e5;
}

.review-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.review-item {
  border-bottom: 1rpx solid #f5f5f5;
  padding-bottom: 20rpx;
}

.reviewer {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.name {
  font-size: 28rpx;
  color: #333;
}

.review-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.review-images {
  display: flex;
  gap: 10rpx;
  margin-bottom: 16rpx;
}

.review-images image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.review-time {
  font-size: 24rpx;
  color: #999;
}

/* 底部预订栏样式 */
.booking-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.left-buttons {
  display: flex;
  gap: 40rpx;
}

.icon-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.icon-button image {
  width: 40rpx;
  height: 40rpx;
}

.icon-button text {
  font-size: 20rpx;
  color: #666;
}

.booking-button {
  width: 240rpx;
  height: 72rpx;
  background: #1e88e5;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}