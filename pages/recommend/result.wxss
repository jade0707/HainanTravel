.container {
  padding: 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.recommendation-list {
  margin-bottom: 40rpx;
}

.recommendation-card {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.cover-image {
  width: 100%;
  height: 360rpx;
}

.card-content {
  padding: 20rpx;
}

.main-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.price {
  font-size: 32rpx;
  color: #f85959;
  font-weight: bold;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.tag {
  font-size: 24rpx;
  color: #1e88e5;
  background: rgba(30, 136, 229, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.features {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.feature-icon {
  width: 32rpx;
  height: 32rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #666;
}

.match-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
}

.match-score {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-right: 20rpx;
  border-right: 2rpx solid #f5f5f5;
}

.score {
  font-size: 40rpx;
  color: #1e88e5;
  font-weight: bold;
}

.label {
  font-size: 24rpx;
  color: #999;
}

.match-reasons {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.reason {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
}

.reset-btn, .share-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.reset-btn {
  background: #fff;
  color: #1e88e5;
  border: 2rpx solid #1e88e5;
}

.share-btn {
  background: #1e88e5;
  color: #fff;
}